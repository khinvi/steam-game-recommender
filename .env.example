# .env.example

# Application
APP_NAME="Steam Game Recommender"
ENVIRONMENT=development
DEBUG=true

# API
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Database (SQLite for local, free)
DATABASE_URL=sqlite:///./data/app.db
# For Supabase (free tier): DATABASE_URL=postgresql://user:pass@db.supabase.co:5432/postgres

# Cache (Optional)
USE_REDIS=false
# For Upstash (free tier): REDIS_URL=redis://default:password@redis.upstash.io:6379

# Vector Database (Local ChromaDB)
CHROMA_PERSIST_DIR=./data/chroma
CHROMA_COLLECTION=game_embeddings

# Models
MODEL_DIR=./data/models
USE_GPU=false
BATCH_SIZE=32

# Steam API (Free but rate-limited)
STEAM_API_KEY=your_steam_api_key_here

# Authentication
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Frontend
FRONTEND_URL=http://localhost:3000

# Monitoring (Optional)
ENABLE_METRICS=false
PROMETHEUS_PORT=9090